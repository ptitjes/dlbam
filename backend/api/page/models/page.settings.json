{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Page"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "section": {
      "model": "section",
      "via": "pages"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "imagePosition": {
      "type": "string",
      "default": "center center"
    },
    "shortTitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    }
  }
}
